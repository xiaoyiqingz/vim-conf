# git 命令行显示
function find_git_branch {
     local dir=. head
     until [ "$dir" -ef / ]; do
         if [ -f "$dir/.git/HEAD" ]; then
             head=$(< "$dir/.git/HEAD")
             if [[ $head == ref:\ refs/heads/* ]]; then
                 git_branch=" (${head#*/*/})"
             elif [[ $head != '' ]]; then
                 git_branch=' (detached)'
             else
                 git_branch=' (unknown)'
             fi
             return
         fi
         dir="../$dir"
     done
     git_branch=''
}
PROMPT_COMMAND="find_git_branch; $PROMPT_COMMAND"

red=$'\e[1;31m'
green=$'\e[1;32m'
blue=$'\e[1;34m'
yellow=$'\e[1;33m'
normal_colours=$'\e[m'

PS1="\[$yellow\][\[$red\]\u:\w\[$green\]\$git_branch\[$yellow\]]\[$normal_colours\]\\$ "

# git自动补全
if [ -f ~/mscript/git_completion ]; then . ~/mscript/git_completion; fi

# 终端不能显示中文
export LANG="en_US.utf8"
export LC_ALL="en_US.utf8"

# vim 显示颜色异常
if [ "$TERM" == "xterm" ]; then
    export TERM=xterm-256color
fi

